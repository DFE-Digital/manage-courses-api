{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appServiceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app service."
            }
        },
        "appServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app service plan."
            }
        },
        "workerAppServiceName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app service used for job."
            }
        },
        "workerAppServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "The name of the app service plan used for job."
            }
        },
        "databaseName": {
            "type": "string",
            "metadata": {
                "description": "The name of the database that the app will connect to."
            }
        },
        "databaseServerName": {
            "type": "string",
            "metadata": {
                "description": "The name of the psql server hosting the database."
            }
        },
        "databasePort": {
            "type": "string",
            "metadata": {
                "description": "The default port for the psql server."
            }
        },
        "databaseUsername": {
            "type": "string",
            "metadata": {
                "description": "The username used to connect to the database."
            }
        },
        "databasePassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password used to connect to the database."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the storage account to be used with psql."
            }
        },
        "securityAlertEmail": {
            "type": "string",
            "metadata": {
                "description": "The email address to be used for psql security alerts."
            }
        },
        "manageAPIKey": {
            "type": "securestring",
            "metadata": {
                "description": "The api key for the manage courses api."
            }
        },
        "manageAPIUrl": {
            "type": "string",
            "metadata": {
                "description": "The url for the manage courses api."
            }
        },
        "aspNetCoreEnvironment": {
            "type": "string",
            "defaultValue": "Production",
            "metadata": {
                "description": "Value for ASPNETCORE_ENVIRONMENT environment variable."
            }
        },
        "signinOidcUserInfoEndpoint": {
            "type": "string",
            "metadata": {
                "description": "DfE-Signin OIDC user info endpoint."
            }
        },
        "ucasStorageAccountUrl": {
            "type": "string",
            "metadata": {
                "description": "The url for the ucas storage account."
            }
        },
        "ucasStorageAccountSharedAccessSignature": {
            "type": "string",
            "metadata": {
                "description": "The shared access signature for the ucas storage account."
            }
        },
        "govNotifyApiKey": {
            "type": "securestring",
            "metadata": {
                "description": "Gov Notify api key."
            }
        },
        "govNotifyEmailInviteTemplateId": {
            "type": "string",
            "metadata": {
                "description": "Gov Notify - Email invite template id."
            }
        },
        "govNotifyEmailTemplateId": {
            "type": "string",
            "metadata": {
                "description": "Gov Notify - Email template id."
            }
        },
        "govNotifyEmailUser": {
            "type": "string",
            "metadata": {
                "description": "Gov Notify - Email User."
            }
        },
        "govNotifyEmailWelcomeTemplateId": {
            "type": "string",
            "metadata": {
                "description": "Gov Notify - Email welcome tepmlate id."
            }
        },
        "searchAndCompareAPIKey": {
            "type": "securestring",
            "metadata": {
                "description": "Search and Compare API key."
            }
        },
        "searchAndCompareAPIUrl": {
            "type": "securestring",
            "metadata": {
                "description": "Search and Compare API Url."
            }
        }
    },
    "variables": {
        "templateBaseUrl": "https://raw.githubusercontent.com/DFE-Digital/bat-platform-building-blocks/master/templates/"
    },
    "resources": [
        {
            "name": "storage-account",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'storage-account.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "postgresql-server",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'),'postgresql-server.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "postgresServerName": {
                        "value": "[parameters('databaseServerName')]"
                    },
                    "postgresAdminLogin": {
                        "value": "[parameters('databaseUsername')]"
                    },
                    "postgresAdminPassword": {
                        "value": "[parameters('databasePassword')]"
                    },
                    "securityAlertEmailAddress": {
                        "value": "[parameters('securityAlertEmail')]"
                    },
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    }
                }
            },
            "dependsOn": [
                "storage-account"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "postgresql-database",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'),'postgresql-database.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": {
                        "value": "[parameters('databaseServerName')]"
                    },
                    "databaseName": {
                        "value": "[parameters('databaseName')]"
                    }
                }
            },
            "dependsOn": [
                "postgresql-server"
            ]
        },
        {
            "name": "app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "appServicePlanOS": {
                        "value": "Windows"
                    }
                }
            }
        },
        {
            "name": "worker-app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[parameters('workerAppServicePlanName')]"
                    },
                    "appServicePlanOS": {
                        "value": "Windows"
                    }
                }
            }
        },
        {
            "name": "app-service",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'app-service-windows.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('appServiceName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('app-insights').outputs.instrumentationKey.value]"
                            },
                            {
                                "name": "api__key",
                                "value": "[parameters('manageAPIKey')]"
                            },
                            {
                                "name": "ASPNETCORE_ENVIRONMENT",
                                "value": "[parameters('aspNetCoreEnvironment')]"
                            },
                            {
                                "name": "auth__oidc__userinfo_endpoint",
                                "value": "[parameters('signinOidcUserInfoEndpoint')]"
                            },
                            {
                                "name": "azure_signature",
                                "value": "[parameters('ucasStorageAccountSharedAccessSignature')]"
                            },
                            {
                                "name": "azure_url",
                                "value": "[parameters('ucasStorageAccountUrl')]"
                            },
                            {
                                "name": "email__api_key",
                                "value": "[parameters('govNotifyApiKey')]"
                            },
                            {
                                "name": "email__invite_template_id",
                                "value": "[parameters('govNotifyEmailInviteTemplateId')]"
                            },
                            {
                                "name": "email__template_id",
                                "value": "[parameters('govNotifyEmailTemplateId')]"
                            },
                            {
                                "name": "email__user",
                                "value": "[parameters('govNotifyEmailUser')]"
                            },
                            {
                                "name": "email__welcome_template_id",
                                "value": "[parameters('govNotifyEmailWelcomeTemplateId')]"
                            },
                            {
                                "name": "manage_api_key",
                                "value": "[parameters('manageAPIKey')]"
                            },
                            {
                                "name": "manage_api_url",
                                "value": "[parameters('manageAPIUrl')]"
                            },
                            {
                                "name": "MANAGE_COURSES_POSTGRESQL_SERVICE_HOST",
                                "value": "[reference('postgresql-server').outputs.fullyQualifiedDomainName.value]"
                            },
                            {
                                "name": "MANAGE_COURSES_POSTGRESQL_SERVICE_PORT",
                                "value": "[parameters('databasePort')]"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "[parameters('databaseName')]"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "[parameters('databasePassword')]"
                            },
                            {
                                "name": "PG_USERNAME",
                                "value": "[parameters('databaseUsername')]"
                            },
                            {
                                "name": "POSTGRESQL_SERVICE_PORT",
                                "value": "[parameters('databasePort')]"
                            },
                            {
                                "name": "snc__api__key",
                                "value": "[parameters('searchAndCompareAPIKey')]"
                            },
                            {
                                "name": "snc__api__url",
                                "value": "[parameters('searchAndCompareAPIUrl')]"
                            }
                        ]
                    }
                }
            },
            "dependsOn": [
                "app-service-plan"
            ]
        },
        {
            "name": "worker-app-service",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'app-service-windows.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('workerAppServiceName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('workerAppServicePlanName')]"
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                                "value": "[reference('worker-app-insights').outputs.instrumentationKey.value]"
                            },
                            {
                                "name": "api__key",
                                "value": "[parameters('manageAPIKey')]"
                            },
                            {
                                "name": "ASPNETCORE_ENVIRONMENT",
                                "value": "[parameters('aspNetCoreEnvironment')]"
                            },
                            {
                                "name": "auth__oidc__userinfo_endpoint",
                                "value": "[parameters('signinOidcUserInfoEndpoint')]"
                            },
                            {
                                "name": "azure_signature",
                                "value": "[parameters('ucasStorageAccountSharedAccessSignature')]"
                            },
                            {
                                "name": "azure_url",
                                "value": "[parameters('ucasStorageAccountUrl')]"
                            },
                            {
                                "name": "email__api_key",
                                "value": "[parameters('govNotifyApiKey')]"
                            },
                            {
                                "name": "email__template_id",
                                "value": "[parameters('govNotifyEmailTemplateId')]"
                            },
                            {
                                "name": "email__user",
                                "value": "[parameters('govNotifyEmailUser')]"
                            },
                            {
                                "name": "manage_api_key",
                                "value": "[parameters('manageAPIKey')]"
                            },
                            {
                                "name": "manage_api_url",
                                "value": "[parameters('manageAPIUrl')]"
                            },
                            {
                                "name": "MANAGE_COURSES_POSTGRESQL_SERVICE_HOST",
                                "value": "[reference('postgresql-server').outputs.fullyQualifiedDomainName.value]"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "[parameters('databaseName')]"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "[parameters('databasePassword')]"
                            },
                            {
                                "name": "PG_USERNAME",
                                "value": "[parameters('databaseUsername')]"
                            },
                            {
                                "name": "snc__api__key",
                                "value": "[parameters('searchAndCompareAPIKey')]"
                            },
                            {
                                "name": "snc__api__url",
                                "value": "[parameters('searchAndCompareAPIUrl')]"
                            }
                        ]
                    },
                    "appServiceConnectionStrings": {
                        "value": [
                            {
                                "name": "AzureWebJobsDashboard",
                                "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',reference(parameters('storageAccountName')).outputs.storageKey.value)]",
                                "type": "Custom"
                            },
                            {
                                "name": "AzureWebJobsStorage",
                                "connectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',reference(parameters('storageAccountName')).outputs.storageKey.value)]",
                                "type": "Custom"
                            }
                        ]
                    },
                    "appServiceVirtualApplications": {
                        "value": [
                            {
                                "virtualPath": "/",
                                "physicalPath": "site\\wwwroot"
                            },
                            {
                                "virtualPath": "/ManageCourses.CourseExporterUtil",
                                "physicalPath": "site\\wwwroot\\app_data\\jobs\\triggered\\ManageCourses.CourseExporterUtil"
                            },
                            {
                                "virtualPath": "/ManageCourses.UcasCourseImporter",
                                "physicalPath": "site\\wwwroot\\app_data\\jobs\\triggered\\ManageCourses.UcasCourseImporter"
                            }
                        ]
                    },
                    "deployStagingSlot": {
                        "value": false
                    }
                }
            },
            "dependsOn": [
                "storage-account",
                "app-service-plan"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[parameters('appServiceName')]"
                    },
                    "attachedService": {
                        "value": "[parameters('appServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "worker-app-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('templateBaseUrl'), 'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[parameters('workerAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[parameters('workerAppServiceName')]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}